{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist/src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["test", "jest.setup.ts", "dist", "prisma"]
}
